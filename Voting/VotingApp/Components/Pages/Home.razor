@page "/"
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using Microsoft.AspNetCore.SignalR.Client
@attribute [StreamRendering]
@rendermode InteractiveServer
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>Home</PageTitle>
<div class="content">
    <div class="card">
        <div class="card-header">
            <h1>Hello, world!</h1>
        </div>
        <div class="card-body">
            Welcome to your new app.
        </div>
    </div>
</div>

@code {
    private HubConnection hubConnection;
    private string message = "Waiting for unlock...";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            hubConnection = new HubConnectionBuilder()
                .WithUrl("http://localhost:5062/voting") // Use correct hub endpoint
                .WithAutomaticReconnect()
                .Build();

            hubConnection.On<string, string>("UnlockApp", async (userId, cabin) =>
            {
                await InvokeAsync(() =>
                {
                    message = $"Unlocked by {userId} in {cabin}";
                    Console.WriteLine(message);
                    StateHasChanged();
                });
            });

            await hubConnection.StartAsync();

            if (hubConnection.State == HubConnectionState.Connected)
            {
                Console.WriteLine("Connected ... Please type message now");
                var testMessage = "Hey";
                Console.WriteLine(hubConnection.ConnectionId);
                // You can invoke methods here if needed
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
    }

    public void Dispose()
    {
        _ = hubConnection.DisposeAsync();
    }
}

