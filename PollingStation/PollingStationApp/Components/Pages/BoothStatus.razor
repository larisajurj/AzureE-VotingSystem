@page "/boothStatus"
@using PollingStationApp.Context
@rendermode InteractiveServer
@inject CosmosDbContext context; 
<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>
@foreach (var booth in context.PollingStation.Where(p => p.Id == "2").FirstOrDefault()?.Booths)
{
    <p role="status">Id: @booth.Id</p>
    <p role="status">Session: @booth.SessionId</p>
    <p role="status">Status: @booth.Status</p>

}
<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
